<div class="row">
  <div class="col-md-12 text-center">
    <h1>Meus contatos</h1>
  </div>

  <div class="col-md-8 offset-md-2 col-xs-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Telefone</th>
          <th colspan="2">
            Ações
            <%= link_to "<i class='fa fa-file' title='Novo Contato'></i>"
                .html_safe, new_contact_path, class: "btn btn-success" %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% if @contacts.empty? %>
          <tr>
            <td colspan="4" class="text-center">
              <h3>Sem contatos cadastrados.</h3>
              <%= link_to 'click aqui', new_contact_path %> para cadastrar um novo contato
            </td>
          </tr>
        <% end %>
        <% @contacts.each do |c| %>
          <tr>
            <td>
              <%= c.name %>
            </td>
            <td>
              <%= c.phone %>
            </td>
            <td>
              <%= link_to "<i class='fa fa-edit ' title='Editar'></i>"
                  .html_safe, edit_contact_path(c), class: 'btn btn-warning' %>
              
            </td>
            <td>
              <%= link_to "<i class='fa fa-trash-alt' title='Excluir'></i>"
                  .html_safe, contact_path(c), method: :delete, 
                  class: 'btn btn-danger', data: { confirm: 'Tem certeza' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
